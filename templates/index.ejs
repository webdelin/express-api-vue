<!doctype html>
<html lang="en">
<head>
<%- include('./partials/head'); %>
</head>
<body>
<%- include('./partials/navbar'); %>
<div id="app" class="container pt-3">
    <form @submit.prevent="createServer">
        <div class="mb-3">
        <input class="form-control" type="text" v-model="name">
        </div>
    </form>
    <div class="spinner-border text-primary" role="status" v-if="!servers.length">
        <span class="visually-hidden">Loading...</span>
    </div>
    <ul v-else class="list-group ">
        <li v-for="server in servers" :key="server.id" class="list-group-item  d-flex justify-content-between align-items-center">
            {{server.name}}
            <span class="badge bg-primary rounded-pill" @click="deleteServer(server.id)">{{server.status}}</span>
        </li>
    </ul>
</div>
<script src="https://unpkg.com/vue@next"></script>
<script src="/app.js"></script>
</body>
</html>